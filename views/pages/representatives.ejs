<!DOCTYPE html>
<html>
 <%- include ../partials/head.ejs %>
<body>
  <%- include ../partials/header.ejs %>
  <main>
    <div class="page-header">
        <h2>Federal District <%= value.districtPair.federalDistrict %> and State District <%= value.districtPair.stateDistrict %></h2>
    </div>
    <section id="intro">
      <div class="card1">
        <p><a href="/checkvoter">Am I Registered to Vote?</a></p>
      </div>
    </section>
    <section id="national-rep" class="deck">
      <legend >National Representatives</legend>

      <div class="innerdeck">

      <% value.reps.forEach(item => { %>
        <% if(/Federal/.test(item.role)){ %>
        <div class="card">
          <h3><%= item.name %></h3>
          <p><%= item.role %></p>
          <img src="<%= item.img_url %>" alt="<%= item.name %>" />
          <p>Identifies as: <%= item.political_affiliation %></p>
          <p><a href="<%= item.website_url %>">Website</a></p>
          <!-- <p>Email: <%= item.email %></p> -->
          <p>Phone: <%= item.phone %></p>
        </div>
     
      <% }}) %>
    </div>
    </section>

    <section id="state-rep" class="deck">
        <legend>State Representatives</legend>

        <div class="innerdeck">

      <% value.reps.forEach(item => { %>
        <% if(/State/.test(item.role)){ %>
        <div class="card">
          <h3><%= item.name %></h3>
          <p><%= item.role %></p>
          <img src="<%= item.img_url %>" alt="<%= item.name %>" />
          <p>Identifies as: <%= item.political_affiliation %></p>
          <p><a href="<%= item.website_url %>">Website</a></p>
          <p> <%= item.email %></p>
          <p>Phone: <%= item.phone %></p>
        </div>
      <% }}) %>
    </div>
    </section>

  </main>
  <%- include ../partials/footer.ejs %>
</body>
</html>
